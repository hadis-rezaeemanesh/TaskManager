<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#F4E6E6">

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="39dp"
            android:layout_height="41dp"
            android:layout_alignTop="@+id/imgview_user"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="2dp"
            android:background="#F4E6E6"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_trash" />

        <ImageView
            android:id="@+id/imgview_user"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:padding="8dp"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/txtview_task_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_username"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/imgview_user"
            android:text="tasks"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtview_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@+id/imgview_user"
            android:textColor="@color/design_default_color_on_secondary"
            android:textSize="18sp"
            tools:text="username" />

        <TextView
            android:id="@+id/txtview_signup_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtview_task_number"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="4dp"
            android:text="date"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>