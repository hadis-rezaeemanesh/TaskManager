<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_first_word"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_txt_view_rounded"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:text="ا"
        android:layout_margin="5dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_view_title_item"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="ارسال تمرین"
        android:layout_marginTop="16dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_view_date_item"
        android:layout_alignBottom="@id/title_first_word"
        android:layout_toRightOf="@id/title_first_word"
        android:padding="3dp"
        android:text="Date And Time"
        android:layout_margin="3dp"/>




</RelativeLayout>